<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.se491.simacogo.GameActivity">

    <TextView
        android:id="@+id/player"
        android:text="@string/player"
        android:textSize="30sp"
        android:textColor="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/gray"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="Score"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Black -> "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="   "
                android:id="@+id/blackScore"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="White -> "
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/whiteScore"
                android:text="   "
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:id="@+id/grid"
        android:background="#a7a1a1"
        android:columnCount="9"
        android:rowCount="10"
        android:rowOrderPreserved="true"
        android:columnOrderPreserved="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arrow1"
            android:src="@drawable/downarrow"
            android:contentDescription="down arrow"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/arrow2"
            android:src="@drawable/downarrow"
            android:contentDescription="down arrow"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/arrow3"
            android:src="@drawable/downarrow"
            android:contentDescription="down arrow"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/arrow4"
            android:src="@drawable/downarrow"
            android:contentDescription="down arrow"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/arrow5"
            android:src="@drawable/downarrow"
            android:contentDescription="down arrow"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/arrow6"
            android:src="@drawable/downarrow"
            android:contentDescription="down arrow"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/arrow7"
            android:src="@drawable/downarrow"
            android:contentDescription="down arrow"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/arrow8"
            android:src="@drawable/downarrow"
            android:contentDescription="down arrow"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/arrow9"
            android:src="@drawable/downarrow"
            android:contentDescription="down arrow"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"/>

    </GridLayout>

</RelativeLayout>
